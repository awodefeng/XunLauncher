<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/high_temper_warn_bg_2" />

    <TextView
        android:id="@+id/temper_warn_tv"
        android:textSize="@dimen/high_temper_warning_text_size"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_temper_warning_margin"
        android:layout_marginRight="@dimen/high_temper_warning_margin"
        android:textColor="@color/white"
        android:text="@string/stop_story_warning"/>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/cancel"
                android:src="@drawable/xiaoxun_ok_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:layout_weight="1"/>
        </LinearLayout>


</FrameLayout>
