<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_magic_clock_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40px">

    <com.xxun.xunlauncher.clock.WatchRotateView
        android:id="@+id/sword_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:WatchImage="@drawable/round_magic_clock_sec" />

    <com.xxun.xunlauncher.clock.WatchRotateView
        android:id="@+id/sword_minute"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:WatchImage="@drawable/round_magic_clock_min" />

    <com.xxun.xunlauncher.clock.WatchRotateView
        android:id="@+id/sword_hour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:WatchImage="@drawable/round_magic_clock_hour" />

</FrameLayout>
