<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sim_absent_bg" >

    <TextView
        android:id="@+id/sim_absent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
	android:text="@string/sim_absent_tv"
	android:layout_marginTop="110dp"
	android:layout_marginStart="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginEnd="10dp"
	android:layout_marginRight="10dp"
        android:textSize="@dimen/insert_sim_tv_size"/>

    <ImageView
        android:id="@+id/sim_insert_help"
        android:layout_width="150dp"
        android:layout_height="63dp"
	android:layout_gravity="bottom|center_vertical"
        android:background="@drawable/insert_sim_help" />

    <ImageView
        android:id="@+id/reboot_watch"
        android:layout_width="150dp"
        android:layout_height="63dp"
	android:layout_gravity="bottom|right"
        android:background="@drawable/reboot_watch" />

</FrameLayout>
